extends layout.pug

block extralink
  link(rel="stylesheet" href="/reportstyle.css")

block extrascript
  script(src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous")
  script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous")
   
block main
  div.login-page
    != messages('messages', local)
    if errors
      for error, i in errors
        div(class="alert alert-danger") #{error.msg}

    h3 Voter totals for Precinct #{ precinct }
    div.form
      form.login-form(method="POST" action="/report")
        - let candidates = Object.keys(doc.precincts[0].candidate_votes)
        for candidate in candidates
          div.row
            label(for=candidate)=candidate
            input(name=candidate type="text" placeholder="votes")
        div.row
          label(for="total") Total precinct votes
          input(name="total" placeholder="votes")
        button(type=submit) Submit