extends layout.pug

block extralink
  link(rel="stylesheet" href="/style.css")
  
block extrascript
  script(src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous")
  script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous")
  
block main
  div.login-page
    != messages('messages', local)
    if errors
      for error, i in errors
        div.alert.alert-danger #{error.msg}
    if successes
      for success, i in successes
        div.alert.alert-success #{success.msg}
  h1 Campaign Configuration
  p Make changes to your campaign here.
  p When you add your opponents, your pollwatchers can report voting totals at the end of the day right through the app and you can see them directly on your admin panel
  form(action="/campaignconfiguration" method="POST")
    div.row
      div.col
        label(for="opponents") Opponents*
        small#opponenthelp.form-text.text-muted Enter all of your opponent names, first and last. Separate opponents with a comma (e.g.: Dwight D. Eisenhower, John F. Kennedy, Woodrow Wilson)
        input#opponents.form-control(name="opponents" type="text" placeholder="Enter opponent names")
      
    div.row
      div.col
        label(for="precincts") Number of Precincts
        small#precinctshelp.form-text.text-muted Entering the total number of precincts will allow you to see vote totals broken down by precinct, as well as assign pollwatchers to different precincts.
        input#precincts.form-control(name="precincts" type="text" placeholder="Enter number of precincts in your ward")

  h1 User Configureation
  p To change your password, click the button below. You will receive an email with a link to change your password.
  a(href="/requestreset")
    button.btn.btn-primary Request password reset