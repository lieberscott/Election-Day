html
  head
    title Election Day App
    meta(name="description" content="A cool thing made with Glitch")
    link#favicon(rel="icon" href="https://glitch.com/edit/favicon-app.ico" type="image/x-icon")
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous")
    link(rel="stylesheet" href="/layout.css")
    
    block extralink
    block extrascript
    
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous")

  
  body
    nav.navbar.navbar-expand-md.navbar-light.bg-light.sticky-top
      if admin
        a.navbar-brand(href="/admin") Home
        button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        div.collapse.navbar-collapse#navbarSupportedContent
          ul.navbar-nav.mr-auto
            li.nav-item.hide
              a.nav-link(href="/precincts") Precinct List
                span.sr-only (current)
            li.nav-item.hide
              a.nav-link(href="/electionresults") Election Results
            li.nav-item.hide
              a.nav-link(href="/precincts") View Current List
            li.nav-item.hide
              a.nav-link(href="/upload") Upload New List
            li.nav-item.hide
              a.nav-link(href="/configure#export") Export Current List
            li.nav-item.hide
              a.nav-link(href="/pollwatchers") View Pollwatchers
            li.nav-item.hide
              a.nav-link(href="/addpollwatcher") Add Pollwatcher
            li.nav-item.hide
              a.nav-link(href="/configure") Configure Your Campaign
            li.nav-item.hide
              a.nav-link(href="/contact") Contact
            li.nav-item
              a.nav-link(href="/logout") Logout
      else
        a.navbar-brand(href="/admin") Home
        button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        div.collapse.navbar-collapse#navbarSupportedContent
          ul.navbar-nav.mr-auto
            li.nav-item.active
              a.nav-link(href="/choice") Home
                span.sr-only (current)
            li.nav-item
              a.nav-link(href="/watch") Voter List
            li.nav-item
              a.nav-link(href="/report") Report Numbers
            li.nav-item.hide
              a.nav-link(href="/pollwatcherconfigure") Configure Your Account
            li.nav-item
              a.nav-link(href="/logout") Logout
        
        
    div.container.container-fluid
      div.row
        nav.col-2.d-none.d-md-block.bg-light.sidebar
          div.sidebar-sticky
            ul.nav.flex-column
              if admin
                li.nav-item
                  a.nav-link.active(href="/admin")
                    i.fas.fa-home
                    span   Dashboard
                      span.sr-only (current)
                li.nav-item
                  a.nav-link(href="/electionresults")
                    i.far.fa-chart-bar
                    span   Election Results
                li.nav-item
                  a.nav-link(href="/precincts")
                    i.fas.fa-file
                    span   View Current List
                li.nav-item
                  a.nav-link(href="/upload")
                    i.fas.fa-upload
                    span   Upload A New List
                li.nav-item
                  a.nav-link(href="/configure#export")
                    i.fas.fa-file-export
                    span   Export Current List
                li.nav-item
                  a.nav-link(href="/pollwatchers")
                    i.fas.fa-glasses
                    span   View Pollwatchers
                li.nav-item
                  a.nav-link(href="/addpollwatcher")
                    i.fas.fa-plus
                    span   Add Pollwatcher
                li.nav-item
                  a.nav-link(href="/configure")
                    i.fas.fa-cog
                    span   Configure Your Campaign
                li.nav-item
                  a.nav-link(href="/contact")
                    i.fas.fa-envelope
                    span   Contact Us
                li.nav-item
                  a.nav-link(href="/logout")
                    i.fas.fa-sign-out-alt
                    span   Logout
              else
                li.nav-item
                  a.nav-link(href="/choice")
                    i.fas.fa-home
                    span   Dashboard
                li.nav-item
                  a.nav-link(href="/watch")
                    i.fas.fa-glasses
                    span   Voter List
                li.nav-item
                  a.nav-link(href="/report")
                    i.fas.fa-chart-bar
                    span   Report Numbers
                li.nav-item
                  a.nav-link(href="/pollwatcherconfigure")
                    i.fas.fa-cog
                    span   Configure Your Account
                li.nav-item
                  a.nav-link(href="/logout")
                    i.fas.fa-sign-out-alt
                    span   Logout
              

      div.col-10.ml-sm-auto.px-4
        // != messages('message', locals)
        if successes
          for success in successes
            div.alert.alert-success #{ success }
        if errors
          for error, i in errors
            div.alert.alert-danger #{ error }
        block main