extends indexlayout.pug

block extralink
  link(rel="stylesheet" href="/loginstyle.css")
  
block main
  body
    div.container.container-fluid
      div.login-page
        if errors
          for error, i in errors
            div.alert.alert-danger #{error.msg}
        if successes
          for success, i in successes
            div.alert.alert-success #{success.msg}
        h3 Election Day App
        p Ready to register? Fill out the information below accurately. On the next page you will be asked to enter your credit card information.
        div.form
          form.login-form(method="POST" action="/register" onsubmit="return confirm('Make sure the information you entered is correct. It is difficult to change your information later. Once you are sure your information is correct, press OK to continue.')")
            label(for="email") Email
            input(name="email" type="text" placeholder="Your email")
            label(for="password") Password (must be at least 8 characters)
            input(name="password" type="password" placeholder="Password")
            label(for="password2") Confirm password
            input(name="password2" type="password" placeholder="Retype password")
            label(for="ward") Ward
            input(name="ward" type="text" placeholder="Ward")
            label(for="precincts") Precincts
            input(name="precincts" type="text" placeholder="Number of precincts in ward")
            label(for="candidatefirst") Candidate's First Name
            input(name="candidatefirst" type="text" placeholder="Candidate first name")
            label(for="candidatelast") Candidate's Last Name
            input(name="candidatelast" type="text" placeholder="Candidate last name")
            label(for="userfirst") Your First Name
            input(name="userfirst" type="text" placeholder="Your first name")
            label(for="userlast") Your Last Name
            input(name="userlast" type="text" placeholder="Your last name")
            button(type=submit) Register
            p.message Already registered? 
              a(href="/login") Click here to login
    
    
    
    
    