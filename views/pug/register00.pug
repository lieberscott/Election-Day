html(lang="en")
  head
    title Register
    meta(name="description" content="A cool thing made with Glitch")
    link#favicon(rel="icon" href="https://glitch.com/edit/favicon-app.ico" type="image/x-icon")
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="/loginstyle.css")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
    script(src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous")
    script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous")
    
  body
    div.container.container-fluid
      div.login-page
        != messages('messages', local)
        if errors
          for error, i in errors
            div(class="alert alert-danger") #{error.msg}
        h3 Welcome to Election Day
        form(method="POST" action="/register")
          div.form-row
            div.form-group.col-md-6
              label(for="inputEmail4") Email
              input#inputEmail4.form-control(type="email" placeholder="Email")
            div.form-group.col-md-6
              label(for="inputPassword4") Password
              input#inputPassword4.form-control(type="password" placeholder="Password")
          div.form-group
            label(for="inputAddress") Address
            input#inputAddress.form-control(type="text" placeholder="1234 Main St")
          div.form-group
            label(for="inputAddress2") Address 2
            input#inputAddress2.form-control(type="text" placeholder="Apartment, studio, or floor")
          div.form-row
            div.form-group.col-md-6
              label(for="inputCity") City
              input#inputCity.form-control(type="text")
            div.form-group.col-md-4
              label(for="inputState") State
              select#inputState.form-control
                option(selected) Choose...
                option ...
            div.form-group.col-md-2
              label(for="inputZip") Zip
              input#inputZip.form-control(type="text")
          div.form-group
            div.form-check
              input#gridCheck.form-check-input(type="checkbox")
              label.form-check-label(for="gridCheck") Check me out
          button.btn.btn-primary(type="submit") Sign in
    
    
    
    
    